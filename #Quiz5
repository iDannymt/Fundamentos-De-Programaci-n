import os
os.system("clear")
print("Groups")
suma=0
lista=[0,4,2,6,9,8,3,12 ]

def find_threes (variable):
    suma=0
    otral=[]
    for x in variable:
        if(x%3==0):
            suma=suma+x
            otral.append(x)
    print("La lista de numeros divisibles entre tres es:",otral)
    return suma
resultado= find_threes(lista)
print("La suma de esos numeros es:",resultado)
